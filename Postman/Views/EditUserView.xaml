<controls:MetroWindow x:Class="Postman.Views.EditUserView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      mc:Ignorable="d"
                      ResizeMode="NoResize"
                      Title="Edit user"
                      IsMaxRestoreButtonEnabled="False"
                      IsMinButtonEnabled="False"
                      WindowStartupLocation="CenterScreen" Height="206" Width="307.333">
    <Grid>
        <StackPanel Margin="3">
            <TextBlock Text="Name"></TextBlock>
            <TextBox Text="{Binding Path=Name}"></TextBox>

            <TextBlock Text="Password"></TextBlock>
            <PasswordBox></PasswordBox>
            <TextBlock Text="Repeat password"></TextBlock>
            <PasswordBox></PasswordBox>
            <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button IsCancel="True" Content="Cancel" Margin="0, 0, 10, 0"></Button>
                <Button IsDefault="True" Content="OK" Width="40"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:MetroWindow>